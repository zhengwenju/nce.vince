<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@drawable/login_background_vf"
    android:fitsSystemWindows="true"
    >
    <RelativeLayout
        android:id="@+id/btn_back"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_16"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp_15">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_back_vf"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:padding="@dimen/dp_10"
        android:text="@string/login10"
        android:textStyle="bold"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_15"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:textColor="@color/white8"
        android:textSize="@dimen/dp_73"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_90"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_135"
        android:textSize="@dimen/dp_32"
        android:text="@string/login"
        android:layout_marginLeft="@dimen/dp_32"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_33"
        android:layout_marginTop="@dimen/dp_216"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time013"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"

            />

        <EditText
            android:id="@+id/et_auxiliaries"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:layout_marginLeft="@dimen/dp_27"
            android:background="#00000000"
            android:hint="@string/login7"
            android:lineHeight="1dp"
            android:textColorHint="@color/white6"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_272"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_33"
        android:background="#FF8A8A8A" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_33"
        android:layout_marginTop="@dimen/dp_272"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/d37"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"

            />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="@dimen/dp_56"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="#00000000"
            android:hint="@string/login26"
            android:lineHeight="1dp"
            android:textColorHint="@color/white6"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/white"
            android:inputType="textPassword"
            />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

            <ImageView
                android:id="@+id/hidden_pwd_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@drawable/hidden_password_vf"
                />
            <ImageView
                android:id="@+id/display_pwd_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@drawable/display_pwd_vf"
                android:visibility="gone"
                />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_328"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_33"
        android:background="#FF8A8A8A" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_33"
        android:layout_marginTop="@dimen/dp_328"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time011"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"

            />

        <EditText
            android:id="@+id/et_confirm"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_56"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="7"
            android:background="#00000000"
            android:hint="@string/login26"
            android:inputType="textPassword"
            android:lineHeight="1dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white6"
            android:textSize="@dimen/sp_16" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

            <ImageView
                android:id="@+id/hidden_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@drawable/hidden_password_vf"
                />
            <ImageView
                android:id="@+id/display_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@drawable/display_pwd_vf"
                android:visibility="gone"
                />
        </RelativeLayout>

    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_384"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_33"
        android:background="#FF8A8A8A" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_33"
        android:layout_marginTop="385dp"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login14"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"

        />

    <EditText
        android:id="@+id/auxiliaries_et"
        android:layout_width="0dp"
        android:layout_weight="7"
        android:layout_height="@dimen/dp_56"
        android:layout_marginLeft="@dimen/dp_27"
        android:background="#00000000"
        android:hint="@string/login14"
        android:lineHeight="1dp"
        android:textColorHint="@color/white6"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/white"
        />


            <ImageView
                android:id="@+id/btn_picture"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@drawable/pic_btn_vf"
                />
            <ImageView
                android:id="@+id/btn_photograph"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@drawable/photo_btn_vf"
                />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="440dp"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_33"
        android:background="#FF8A8A8A" />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_32"
        >

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/login_selector"
            android:checked="false"
            android:layout_marginTop="1dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time014"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            android:layout_marginLeft="@dimen/dp_10"
            android:buttonTint="@color/white"
            />
        <TextView
            android:id="@+id/rigster_tv2"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/sp_12"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:text="@string/time015"
            />
    </LinearLayout>


    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginTop="480dp"
        android:layout_marginRight="@dimen/dp_32"
        android:background="@drawable/btn_login_selector"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_20"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/loding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_widthPercent="10%w"
        app:layout_heightPercent="10%w"
        android:visibility="gone"
        android:layout_centerInParent="true"
        style="@android:style/Widget.ProgressBar.Large.Inverse"/>
</RelativeLayout>