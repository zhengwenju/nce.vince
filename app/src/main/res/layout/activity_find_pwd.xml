<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@drawable/login_background_vf">

    <RelativeLayout
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_16"
        >
        <ImageView
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:background="@drawable/back_vf"
            />
        <TextView
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="@dimen/sp_24"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="@string/basic_data23"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/input_content_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_33"
            android:layout_marginTop="@dimen/dp_20"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time012"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"

                />

            <EditText
                android:id="@+id/parent_id_ev"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:layout_marginLeft="@dimen/dp_27"
                android:background="#00000000"
                android:hint="@string/basic_data24"
                android:lineHeight="1dp"
                android:textColorHint="@color/white6"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/white"
                />
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_33"
            android:background="#FF8A8A8A" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_33"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time010"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"

                />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="@dimen/dp_56"
                android:layout_marginLeft="@dimen/dp_25"
                android:background="#00000000"
                android:hint="@string/basic_data19"
                android:lineHeight="1dp"
                android:textColorHint="@color/white6"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/white"
                android:inputType="textPassword"
                />
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >

                <ImageView
                    android:id="@+id/hidden_pwd_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:src="@drawable/hidden_password_vf"
                    />
                <ImageView
                    android:id="@+id/display_pwd_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:src="@drawable/display_pwd_vf"
                    android:visibility="gone"
                    />
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_33"
            android:background="#FF8A8A8A" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_33"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time011"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"

                />

            <EditText
                android:id="@+id/et_confirm"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_56"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="7"
                android:background="#00000000"
                android:hint="@string/basic_data21"
                android:inputType="textPassword"
                android:lineHeight="1dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white6"
                android:textSize="@dimen/sp_16" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >

                <ImageView
                    android:id="@+id/hidden_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:src="@drawable/hidden_password_vf"
                    />
                <ImageView
                    android:id="@+id/display_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:src="@drawable/display_pwd_vf"
                    android:visibility="gone"
                    />
            </RelativeLayout>

        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_33"
            android:background="#FF8A8A8A" />
    </LinearLayout>



    <LinearLayout
        android:visibility="gone"
        android:id="@+id/input_content_rl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_100"
        >
        <TextView
            android:id="@+id/content_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_24"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/dp_20"
            android:text="提交" />

        <TextView
            android:id="@+id/time_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/content_tv2"
            android:layout_gravity="center"
            android:text="11111111"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginLeft="@dimen/dp_33"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_33"
        android:background="@drawable/blue_shape15"
        android:text="@string/aa9"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18" />

    <ProgressBar
        android:id="@+id/loding"
        style="@android:style/Widget.ProgressBar.Large.Inverse"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</LinearLayout>