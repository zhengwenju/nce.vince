<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/blue"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dp_10"
            android:text="@string/login10"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_15"/>
        <TextView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/blue"
            android:padding="@dimen/dp_10"
            android:text="@string/login20"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_15"/>
        <ImageView
            android:layout_width="@dimen/dp_67"
            android:layout_height="@dimen/dp_67"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_73"
            android:background="@mipmap/logo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_157"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/sp_18"
            android:text="@string/login11"
            android:textColor="@color/black1"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_190"
            android:background="@drawable/white_shape"
            android:layout_marginTop="@dimen/dp_220"
            android:layout_marginLeft="@dimen/dp_60"
            android:layout_marginRight="@dimen/dp_60"
            android:textSize="@dimen/sp_15"
            android:hint="@string/login7"
            android:paddingLeft="@dimen/dp_7"
            android:paddingRight="@dimen/dp_7"
            >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_42">
                <EditText
                    android:id="@+id/et_auxiliaries"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textSize="@dimen/sp_15"
                    android:hint="@string/login17"
                    android:paddingLeft="@dimen/dp_18"
                    android:paddingRight="@dimen/dp_18"
                    android:paddingTop="@dimen/sp_14"
                    android:paddingBottom="@dimen/dp_100"/>
            </ScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:id="@+id/btn_picture"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                    <ImageView
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="@dimen/dp_20"
                        android:background="@mipmap/pic_btn"
                        android:layout_centerHorizontal="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/btn_photograph"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                    <ImageView
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="@dimen/dp_20"
                        android:background="@mipmap/photo_btn"
                        android:layout_centerHorizontal="true"/>
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"/>
            </LinearLayout>
        </RelativeLayout>
        <Button
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_marginTop="@dimen/dp_450"
            android:layout_marginLeft="@dimen/dp_60"
            android:layout_marginRight="@dimen/dp_60"
            android:background="@drawable/btn_login_selector"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/white"
            android:text="@string/login12"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black2"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login13"
                android:layout_marginLeft="@dimen/dp_20"
                android:textSize="@dimen/dp_18" />
            <TextView
                android:id="@+id/data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login13"
                android:layout_marginLeft="@dimen/dp_20"
                android:textSize="@dimen/dp_16"
                android:textColor="@color/black1"
                android:layout_marginTop="@dimen/dp_5"/>
        </LinearLayout>

    </RelativeLayout>
    <ProgressBar
        android:id="@+id/loding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_widthPercent="10%w"
        app:layout_heightPercent="10%w"
        android:visibility="gone"
        android:layout_centerInParent="true"
        style="@android:style/Widget.ProgressBar.Large.Inverse"/>
</RelativeLayout>