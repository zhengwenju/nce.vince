<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background_vf"
    android:fitsSystemWindows="true"
    >


    <TextView
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:padding="@dimen/dp_10"
        android:text="@string/login"
        android:textStyle="bold"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_15"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:textColor="@color/white8"
        android:textSize="@dimen/dp_72"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_90"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_135"
        android:textSize="@dimen/dp_32"
        android:text="@string/time016"
        android:layout_marginLeft="@dimen/dp_32"
        android:textStyle="bold"
        android:textColor="@color/white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_200"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time017"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"

            />
        <EditText
            android:id="@+id/et_auxiliaries"
            android:layout_width="match_parent"
            android:hint="请输入您的助记词"
            android:textSize="@dimen/dp_16"
            android:text=""
            android:textColor="@color/white"
            android:background="#00000000"
            android:textColorHint="@color/white6"
            android:layout_height="@dimen/dp_54"
            />
        <View
            android:id="@+id/a"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_centerHorizontal="true"
            android:background="@color/white" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_285"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_32"
        >

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/login_selector"
            android:checked="false"
            android:layout_marginTop="1dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time014"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            android:layout_marginLeft="@dimen/dp_10"
            android:buttonTint="@color/white"
            />
        <TextView
            android:id="@+id/login_tv2"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/sp_12"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:text="@string/Agreement"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/btn_secret_key_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_6"
        android:paddingBottom="@dimen/dp_6"
        android:textSize="@dimen/sp_15"
        android:layout_marginLeft="@dimen/dp_33"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_310"
        android:text="@string/login5"
        android:textColor="@color/white"/>
    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="@dimen/dp_33"
        android:layout_marginRight="@dimen/dp_33"
        android:background="@drawable/btn_login_selector"
        android:textSize="@dimen/sp_20"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="登录"/>
    <TextView
        android:id="@+id/rebinding_tv"
        android:layout_marginTop="@dimen/dp_310"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_6"
        android:paddingBottom="@dimen/dp_6"
        android:textSize="@dimen/sp_15"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_33"
        android:text="@string/login30"
        android:textColor="@color/white"/>
    <ProgressBar
        android:id="@+id/loding"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_centerInParent="true"
        style="@android:style/Widget.ProgressBar.Large.Inverse"
        android:visibility="gone"/>
</RelativeLayout>