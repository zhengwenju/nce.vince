<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@drawable/login_background_vf"
    >
    <RelativeLayout
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_50"
        >
        <ImageView
            android:id="@+id/back_iv"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:background="@drawable/back_vf"
            />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="0dp"
            android:text="@string/assets23"
            android:textSize="@dimen/sp_24" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_63"
        >
        <LinearLayout
            android:id="@+id/choose_coin_llayout"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/choose_coin_tv"
                android:textSize="@dimen/dp_40"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ETH"/>
            <ImageView
                android:layout_marginLeft="10dip"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/choose_bg_vf"/>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/d32"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/dp_32"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sp_10"
            >

            <EditText
                android:textColor="@color/white"
                android:id="@+id/with_coin_ev10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_32"
                android:layout_weight="8"
                android:layout_marginRight="@dimen/dp_5"
                android:background="#00000000"
                android:hint="@string/d26"
                android:textColorHint="@color/white"
                android:textSize="@dimen/dp_15" />
            <ImageView
                android:id="@+id/close1"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/close_vf"
                android:layout_marginRight="@dimen/dp_18"
                />
            <ImageView
                android:id="@+id/qrcode1"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/qr_code_image_vf"
                android:layout_marginRight="@dimen/dp_27"
                />


        </LinearLayout>

        <View
            android:layout_marginTop="@dimen/sp_10"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_1"
            android:layout_alignBottom="@+id/edit_login"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_27"
            android:background="#FF8A8A8A" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/d32"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/dp_32"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"

            >
            <EditText
                android:id="@+id/with_coin_ev20"
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:layout_marginLeft="@dimen/dp_32"
                android:layout_weight="8"
                android:background="#00000000"
                android:hint="@string/d26"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_marginRight="@dimen/dp_5"
                android:textSize="@dimen/dp_15" />
            <ImageView
                android:id="@+id/close2"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/close_vf"
                android:layout_marginRight="@dimen/dp_18"
                />
            <ImageView
                android:id="@+id/qrcode2"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/qr_code_image_vf"
                android:layout_marginRight="@dimen/dp_27"
                />


        </LinearLayout>

        <View
            android:id="@+id/pwd_line"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_1"
            android:layout_alignBottom="@+id/edit_login"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_27"
            android:background="#FF8A8A8A"
            android:layout_marginTop="@dimen/sp_10"

            />

    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_32"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/blue_shape15"
            android:text="@string/d33"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18" />
    </RelativeLayout>


</LinearLayout>