<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/login_background_vf">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            >
            <ImageView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@drawable/back_vf"
                android:layout_centerInParent="true"/>
        </com.zhy.android.percent.support.PercentRelativeLayout>
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_textSizePercent="5%w"
        android:text="提币"
        android:textSize="@dimen/dp_24"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/btn_jl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提币记录"
            android:textSize="@dimen/dp_16"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.zhy.android.percent.support.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_heightPercent="10.4%w"
                app:layout_marginTopPercent="6.4%w"
                app:layout_marginRightPercent="4%w"
                app:layout_marginLeftPercent="4%w"
                android:background="@drawable/white_shape"
                android:visibility="gone"
                >
                <EditText
                    android:id="@+id/input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_marginRightPercent="30%w"
                    android:background="@null"
                    app:layout_textSizePercent="35%h"
                    android:padding="@dimen/dp_5"
                    android:hint="ETH"

                    />
                <ImageView
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="match_parent"
                    android:background="@color/white1"
                    app:layout_marginRightPercent="35%w"
                    android:layout_alignParentRight="true"/>
                <TextView
                    android:id="@+id/type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_widthPercent="35%w"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:hint="选择币种"
                    android:textColorHint="@color/black"
                    app:layout_textSizePercent="30%h"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_widthPercent="2.5%w"
                    app:layout_heightPercent="2.5%w"
                    android:background="@mipmap/b"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    app:layout_marginRightPercent="3%w"/>
            </com.zhy.android.percent.support.PercentRelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_15"
                android:text="@string/d32"
                android:layout_centerInParent="true"
                app:layout_marginLeftPercent="4%w"
                app:layout_marginTopPercent="5.8%w"
                android:textStyle="bold"
                android:textColor="@color/white" />
            <com.zhy.android.percent.support.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_heightPercent="10.4%w"
                app:layout_marginTopPercent="6.4%w"
                app:layout_marginRightPercent="4%w"
                app:layout_marginLeftPercent="4%w">

                <EditText
                    android:enabled="false"
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@null"
                    android:hint="@string/d26"
                    android:padding="@dimen/dp_2"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white6"
                    app:layout_marginRightPercent="30%w"
                    app:layout_textSizePercent="35%h" />
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/btn_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/s15"/>
                <TextView
                    android:id="@+id/btn_choose_coin_type"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_20"
                    android:textSize="@dimen/dp_15"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    android:text="@string/choose_coin_type"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/white1"
                    android:layout_alignParentBottom="true"/>
            </com.zhy.android.percent.support.PercentRelativeLayout>
            <com.zhy.android.percent.support.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_heightPercent="12.9%w"
                app:layout_marginTopPercent="1.4%w"
                app:layout_marginRightPercent="4%w"
                app:layout_marginLeftPercent="4%w">
                <TextView
                    android:id="@+id/tip_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    app:layout_textSizePercent="4.3%w"
                    android:text="转出额度:"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:id="@+id/quto_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tip_tv2"
                    android:layout_toRightOf="@+id/tip_tv2"
                    android:layout_marginLeft="@dimen/dp_5"
                    app:layout_textSizePercent="4.3%w"
                    android:text=""
                    android:textColor="@color/white"
                    />
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/record_iv"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_toRightOf="@+id/quto_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/preview_btn"
                    app:layout_marginRightPercent="00%w"
                    app:layout_marginTopPercent="5.5%w"
                    app:layout_marginBottomPercent="3%w"
                    />
            </com.zhy.android.percent.support.PercentRelativeLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/link_name_linearlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="链名称"
                    android:textSize="@dimen/sp_15"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    app:layout_marginTopPercent="2.8%w"
                    android:textColor="@color/white"
                    />
                <LinearLayout
                    android:layout_marginLeft="@dimen/dp_14"

                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_30"
                        android:text="ERC20"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:textColor="@color/white"
                        android:background="@color/black10">
                    </Button>
                    <Button
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_30"
                        android:text="TRC20"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:textColor="@color/black3"
                        android:background="@color/black10">
                    </Button>
                    <Button
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_30"
                        android:text="OMNI"

                        android:layout_marginLeft="@dimen/dp_8"
                        android:textColor="@color/black3"
                        android:background="@color/black10">
                    </Button>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hy4"
                android:textSize="@dimen/sp_15"
                android:layout_centerInParent="true"
                app:layout_marginLeftPercent="4%w"
                app:layout_marginTopPercent="3.0%w"
                android:textColor="@color/white"
                android:textStyle="bold"/>
            <com.zhy.android.percent.support.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_heightPercent="10.4%w"
                app:layout_marginTopPercent="3.4%w"
                app:layout_marginRightPercent="4%w"
                app:layout_marginLeftPercent="4%w">
                <EditText
                    android:id="@+id/number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_marginRightPercent="30%w"
                    android:background="@null"
                    app:layout_textSizePercent="35%h"
                    android:padding="@dimen/dp_5"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white6"
                    android:inputType="number"/>
                <TextView
                    android:id="@+id/unit_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text="币种"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    app:layout_textSizePercent="35%h"/>
                <ImageView
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="match_parent"
                    android:background="@color/white1"
                    app:layout_marginRightPercent="10%w"
                    app:layout_marginTopPercent="3%w"
                    app:layout_marginBottomPercent="3%w"
                    android:layout_alignParentRight="true"/>
                <TextView
                    android:id="@+id/type_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    app:layout_marginRightPercent="15%w"
                    android:text="@string/transf34"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    app:layout_textSizePercent="35%h"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/white1"
                    android:layout_alignParentBottom="true"/>
            </com.zhy.android.percent.support.PercentRelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_15"
                android:text="@string/transf15"
                android:layout_centerInParent="true"
                app:layout_marginLeftPercent="4%w"
                app:layout_marginTopPercent="5.8%w"
                android:textColor="@color/white"
                android:textStyle="bold"
                />
            <com.zhy.android.percent.support.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_heightPercent="10.4%w"
                app:layout_marginTopPercent="3.4%w"
                app:layout_marginRightPercent="4%w"
                app:layout_marginLeftPercent="4%w">

                <TextView
                    android:id="@+id/number2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入手续费"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold"
                    android:textColor="@color/white6"
                    android:inputType="number"
                    android:padding="@dimen/dp_5"
                    app:layout_marginRightPercent="30%w"
                    app:layout_textSizePercent="35%h" />
                <TextView
                    android:id="@+id/unit_sxf_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text="币种"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_textSizePercent="35%h"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/white1"
                    android:layout_alignParentBottom="true"/>
            </com.zhy.android.percent.support.PercentRelativeLayout>
            <com.bronet.blockchain.view.MyScrollView
                android:id="@+id/scrollview"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_heightPercent="50%w"
                app:layout_marginTopPercent="6.4%w"
                app:layout_marginRightPercent="4%w"
                app:layout_marginLeftPercent="4%w"
                >
                <TextView
                    android:id="@+id/tip_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_marginRightPercent="30%w"
                    app:layout_textSizePercent="20%h"
                    android:padding="@dimen/dp_5"
                    android:textColor="@color/white"
                    />

            </com.bronet.blockchain.view.MyScrollView>


            <com.zhy.android.percent.support.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_heightPercent="10.4%w"
                app:layout_marginTopPercent="6.4%w"
                app:layout_marginRightPercent="4%w"
                app:layout_marginLeftPercent="4%w">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_marginRightPercent="30%w"
                    android:background="@null"
                    app:layout_textSizePercent="35%h"
                    android:padding="@dimen/dp_5"
                    android:textColor="@color/white"
                    android:text="@string/transf35"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/number3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_textSizePercent="35%h"/>
            </com.zhy.android.percent.support.PercentRelativeLayout>
            <Button
                android:id="@+id/btn_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_marginTopPercent="10%w"
                app:layout_marginBottomPercent="10%w"
                app:layout_heightPercent="11.6%w"
                app:layout_marginRightPercent="14%w"
                app:layout_marginLeftPercent="14%w"
                app:layout_textSizePercent="4.34%w"
                android:background="@drawable/blue_shape15"
                android:text="@string/transaction3"
                android:textColor="@color/white"/>
        </com.zhy.android.percent.support.PercentLinearLayout>
    </ScrollView>
</com.zhy.android.percent.support.PercentLinearLayout>