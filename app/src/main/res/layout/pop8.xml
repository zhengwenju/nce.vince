<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_shape3"
        android:orientation="vertical"
       >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_132"
            android:background="@mipmap/sheng"
            android:orientation="vertical"
            >
            <TextView
                android:layout_marginTop="@dimen/dp_32"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transf44"
                android:layout_marginLeft="@dimen/dp_26"
                android:textSize="@dimen/dp_23"
                android:gravity="center|left"
                android:textColor="@color/white"
                />

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="243dp"
            android:background="@mipmap/ji"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/image0"
                android:layout_marginTop="10dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/blue"/>

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dip"
                android:maxLines="4"
                android:padding="15dip"
                android:scrollbars="vertical"
                android:gravity="left"
                android:singleLine="false"
                android:text="@string/d36"
                android:textSize="@dimen/sp_16" />
            <ImageView
                android:id="@+id/image"
                android:layout_marginTop="10dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/blue"/>

            <TextView
                android:id="@+id/btn_yes"
                android:layout_width="@dimen/dp_220"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="163dp"
                android:background="@drawable/blue_shape5"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:text="@string/update"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_22" />
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>