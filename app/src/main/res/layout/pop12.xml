<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_shape2"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/dp_22"
        android:layout_marginLeft="@dimen/dp_22"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp_13"
            android:text="@string/transf24"
            android:textSize="@dimen/sp_20" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_21"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/pop_quote_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transf32"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/dp_15"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/mBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14000"
                android:textColor="@color/white6"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="@dimen/sp_16"
                android:layout_marginRight="@dimen/dp_14"
                />
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white6" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_11"
            >
            <TextView
                android:id="@+id/pop_total_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transf33"
                android:textSize="@dimen/sp_13"
                android:layout_marginLeft="@dimen/dp_15"
                android:textColor="@color/white"
                />
            <TextView
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/pop_total_tv"
                android:id="@+id/finPrice"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.12412"
                android:textSize="@dimen/sp_13"
                android:layout_marginRight="@dimen/dp_14"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/d38"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <com.bronet.blockchain.ui.MyEditText
                    android:inputType="number"
                    android:id="@+id/number"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="@dimen/dp_40"
                    android:background="@null"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textColorHint="@color/white6"
                    android:hint="@string/d27"
                    android:textSize="@dimen/sp_16" />


                <TextView
                    android:id="@+id/all_tv"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="@dimen/dp_40"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="@string/transf34"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/sp_16"
                    app:layout_widthPercent="20%w" />
                <TextView

                    android:id="@+id/unit_tv1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_40"
                    app:layout_widthPercent="20%w"
                    android:gravity="center"
                    android:text="NCE"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_weight="2"
                    android:textSize="@dimen/sp_16"
                    />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@color/white6" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                app:layout_widthPercent="30%w"
                android:gravity="center"
                android:text="@string/transf53"
                android:paddingLeft="@dimen/dp_2"
                android:paddingRight="@dimen/dp_2"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:paddingLeft="@dimen/dp_2"
                    android:id="@+id/input_price_etv"
                    android:layout_width="0dp"
                    android:layout_weight="9"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="0.00"
                    android:textStyle="bold"
                    android:textColor="@color/white6"
                    android:textColorHint="@color/white6"
                    android:textSize="@dimen/sp_16"
                    android:enabled="false"
                    />
                <TextView

                    android:id="@+id/unit_tv2"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="ETH_"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16"
                    />
            </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@color/white6" />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_32"
                android:text="手续费："
                android:textColor="@color/black4"
                android:textSize="@dimen/sp_12" />
            <TextView
                android:id="@+id/sxf_tv"
                android:textSize="@dimen/sp_12"
                android:layout_marginLeft="@dimen/dp_3"
                android:textColor="@color/black4"
                android:text="0.0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/unit_tv3"
                android:textSize="@dimen/sp_12"
                android:layout_marginLeft="@dimen/dp_3"
                android:textColor="@color/black4"
                android:text="ETH_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_15"
                    android:text="@string/d37"

                    />
                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:background="@null"
                    android:hint="@string/d20"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textColorHint="@color/white6"
                    android:textSize="@dimen/sp_16"
                    android:focusable="true"
                    android:inputType="textPassword"/>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@color/white6" />
            </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            >

            <TextView
                android:id="@+id/btn_no"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_22"
                android:text="@string/d13"
                android:textStyle="bold"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/blue"
                android:background="@drawable/btn_blue_tr_bg"
                />
            <TextView
                android:id="@+id/btn_yes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_heightPercent="15%w"
                app:layout_widthPercent="50%w"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="@string/basic_data15"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_22"
                android:textColor="@color/white"
                android:background="@drawable/btn_blue_bg"
                android:gravity="center"
                android:layout_weight="1"
                />
        </LinearLayout>
    </LinearLayout>
</com.zhy.android.percent.support.PercentRelativeLayout>