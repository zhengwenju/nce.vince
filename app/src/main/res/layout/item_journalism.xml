<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_180"
        android:orientation="vertical"
        android:background="@drawable/image06"
        android:layout_marginTop="@dimen/dp_10"

        >
        <TextView
            android:id="@+id/data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_widthPercent="91.4%w"
            app:layout_marginTopPercent="5%w"
            app:layout_marginBottomPercent="5%w"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/sp_16"
            android:layout_gravity="center"
            android:text="111111111111"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginLeft="@dimen/dp_13"
            />

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:src="@mipmap/ic_launcher_round"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_below="@+id/data"
            />
        <TextView
            android:id="@+id/summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12342131231313"
            android:layout_toRightOf="@+id/image"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_below="@+id/data"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/white6"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_13"
            android:textColor="@color/white"
            android:text="2020/10/10"
            />
        <ImageView
            android:id="@+id/image_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/image05"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            />



    </RelativeLayout>

</com.zhy.android.percent.support.PercentLinearLayout>