<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background_vf"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    >
    <RelativeLayout
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_16"
        >
        <ImageView
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:background="@drawable/back_vf"
            />
        <TextView
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="@dimen/sp_24"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="@string/basic_data17"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_33"
        android:layout_marginTop="@dimen/dp_20"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time09"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"

            />

        <EditText
            android:id="@+id/old_password_ev"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:layout_marginLeft="@dimen/dp_27"
            android:background="#00000000"
            android:hint="@string/basic_data18"
            android:lineHeight="1dp"
            android:textColorHint="@color/white6"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_33"
        android:background="#FF8A8A8A" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_33"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time010"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"

            />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="@dimen/dp_56"
            android:layout_marginLeft="@dimen/dp_25"
            android:background="#00000000"
            android:hint="@string/basic_data19"
            android:lineHeight="1dp"
            android:textColorHint="@color/white6"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/white"
            android:inputType="textPassword"
            />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

            <ImageView
                android:id="@+id/hidden_pwd_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@drawable/hidden_password_vf"
                />
            <ImageView
                android:id="@+id/display_pwd_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@drawable/display_pwd_vf"
                android:visibility="gone"
                />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_33"
        android:background="#FF8A8A8A" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_33"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time011"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"

            />

        <EditText
            android:id="@+id/et_confirm"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_56"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="7"
            android:background="#00000000"
            android:hint="@string/basic_data21"
            android:inputType="textPassword"
            android:lineHeight="1dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white6"
            android:textSize="@dimen/sp_16" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

            <ImageView
                android:id="@+id/hidden_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@drawable/hidden_password_vf"
                />
            <ImageView
                android:id="@+id/display_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@drawable/display_pwd_vf"
                android:visibility="gone"
                />
        </RelativeLayout>

    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_33"
        android:background="#FF8A8A8A" />
    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_270"
        android:layout_marginLeft="@dimen/dp_33"
        android:layout_marginRight="@dimen/dp_33"
        android:background="@drawable/blue_shape15"
        android:textSize="@dimen/sp_20"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="@string/basic_data15"/>
    <ProgressBar
        android:id="@+id/loding"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_centerInParent="true"
        style="@android:style/Widget.ProgressBar.Large.Inverse"
        android:visibility="gone"/>
</LinearLayout>