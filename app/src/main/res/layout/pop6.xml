<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="30%w"
        android:background="@drawable/white_shape3"
        app:layout_marginRightPercent="8%w"
        app:layout_marginLeftPercent="8%w">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/d25"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            app:layout_textSizePercent="5%w"
            app:layout_marginTopPercent="5%w"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignParentBottom="true"
            app:layout_marginBottomPercent="15%w"
            android:background="@color/white1"/>
        <ImageView
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_1"
            app:layout_heightPercent="15%w"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/white1"/>
        <TextView
            android:id="@+id/btn_yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_heightPercent="15%w"
            app:layout_widthPercent="50%w"
            android:layout_alignParentBottom="true"
            android:text="@string/d18"
            android:textColor="@color/blue"
            android:gravity="center"
            app:layout_textSizePercent="5%w"/>
        <TextView
            android:id="@+id/btn_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_heightPercent="15%w"
            app:layout_widthPercent="50%w"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="@string/d17"
            android:textColor="@color/blue"
            android:gravity="center"
            app:layout_textSizePercent="5%w"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentRelativeLayout>