<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_287"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/white_top_shape">

        <TextView
            android:id="@+id/btn_no"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_43"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_14"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:text="@string/basic_data14"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_43"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:text="@string/basic_data15"
            android:textColor="@color/blue"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_51"
            android:background="@color/white1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_51"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_14">
            <TextView
                android:text="@string/app_name"
                android:id="@+id/input_num_tv"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText

                android:layout_marginTop="@dimen/dp_10"
                android:id="@+id/input_num_et"
                android:layout_below="@+id/input_num_tv"
                android:layout_width="@dimen/dp_220"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dip"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:layout_centerVertical="true"
                android:background="@drawable/white_shape2"
                android:focusable="true"
                android:textSize="@dimen/sp_14"
                android:layout_centerHorizontal="true"
                android:paddingLeft="@dimen/dp_8"
                android:inputType="numberDecimal"
                android:gravity="center_vertical|end"
                />
            <TextView
                android:layout_toRightOf="@+id/input_num_et"
                android:layout_alignBottom="@+id/input_num_et"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="NCE"
                android:layout_marginBottom="@dimen/dp_5"
                android:textColor="@color/black4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.bronet.blockchain.view.RangeSeekbar
                android:layout_below="@+id/input_num_et"
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>