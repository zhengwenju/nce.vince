<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="58%w"
        android:background="@drawable/blue_shape2"
        app:layout_marginRightPercent="8%w"
        app:layout_marginLeftPercent="8%w">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入额度"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_textSizePercent="5%w"
            app:layout_marginTopPercent="3%w"

            android:layout_alignParentTop="true" />
        <EditText
            android:id="@+id/num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_heightPercent="15%w"
            app:layout_marginRightPercent="8%w"
            app:layout_marginLeftPercent="8%w"
            android:layout_marginTop="@dimen/dp_40"
            app:layout_textSizePercent="5%w"
            android:hint="最小划转额度为1NCE"
            android:focusable="true"
            android:textColor="@color/white"
            android:background="#00000000"
            android:paddingLeft="@dimen/dp_8"
            android:inputType="number"/>
        <ImageView
            android:layout_below="@id/num"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            app:layout_marginRightPercent="8%w"
            app:layout_marginLeftPercent="8%w"
            android:background="@color/white1"/>
        <EditText
            android:layout_below="@+id/num"
            android:id="@+id/name"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_heightPercent="15%w"
            app:layout_marginRightPercent="8%w"
            app:layout_marginLeftPercent="8%w"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            app:layout_textSizePercent="5%w"
            android:hint="@string/d20"
            android:background="#00000000"
            android:focusable="true"
            android:paddingLeft="@dimen/dp_8"
            android:inputType="textPassword"/>

        <ImageView
            android:id="@+id/image"
            android:layout_below="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            app:layout_marginRightPercent="8%w"
            app:layout_marginLeftPercent="8%w"
            android:background="@color/white1"/>
        <LinearLayout
            android:layout_below="@+id/image"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/btn_no"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_50"
                app:layout_heightPercent="15%w"
                app:layout_widthPercent="50%w"
                android:layout_alignParentBottom="true"
                android:text="@string/d13"
                android:background="@drawable/btn_blue_tr_bg"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_22"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:gravity="center"
                app:layout_textSizePercent="5%w"/>
            <TextView
                android:id="@+id/btn_yes"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_50"
                app:layout_heightPercent="15%w"
                app:layout_widthPercent="50%w"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="@string/basic_data15"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_22"
                android:background="@drawable/btn_blue_bg"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center"
                app:layout_textSizePercent="5%w"/>
        </LinearLayout>

    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentRelativeLayout>