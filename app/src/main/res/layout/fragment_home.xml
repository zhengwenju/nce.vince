<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background_vf"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:textSize="@dimen/dp_24"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="首页"/>

            <ImageView
                android:id="@+id/btn_scan"
                android:layout_width="28dp"
                android:layout_height="24dp"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@mipmap/sweep_code_vf" />
        </RelativeLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_90"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16">
                        <LinearLayout
                            android:id="@+id/btn_contract"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/contract_zh_"
                            android:orientation="vertical"
                            android:layout_marginRight="@dimen/dp_10"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/dp_10"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="15dp"
                                    android:layout_gravity="center_vertical"
                                    android:text="@string/hy11"
                                    android:paddingLeft="@dimen/dp_10"
                                    app:layout_marginLeftPercent="13%h"
                                    android:textSize="@dimen/sp_13"
                                    android:textColor="@color/white"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="15dp"
                                    android:layout_gravity="center_vertical"
                                    android:text="NCE"
                                    android:textSize="@dimen/sp_12"
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:textColor="@color/white"
                                    />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/total_assets01"
                                android:layout_width="wrap_content"
                                android:layout_height="18dp"
                                android:layout_gravity="center_vertical"
                                android:text="0.00"
                                android:paddingLeft="@dimen/dp_10"
                                android:layout_marginTop="@dimen/dp_10"
                                android:textSize="@dimen/sp_12"
                                android:textStyle="bold"
                                android:maxLines="1"
                                android:maxEms="15"
                                android:ellipsize="end"
                                android:textColor="@color/white"
                                app:layout_marginLeftPercent="13%h"
                                app:layout_textSizePercent="25%h" />


                            <TextView
                                android:id="@+id/dollar01_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="$0.00"
                                android:textSize="@dimen/sp_12"
                                android:textColor="@color/white"
                                app:layout_textSizePercent="25%h"
                                android:layout_marginTop="@dimen/dp_10"
                                android:layout_marginLeft="@dimen/dp_10"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/Purchase"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/transaction_zh_vf"
                            android:layout_marginRight="@dimen/dp_10"
                            android:orientation="vertical"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/dp_10"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="15dp"
                                    android:layout_gravity="center_vertical"
                                    android:text="@string/transf55"
                                    android:paddingLeft="@dimen/dp_10"
                                    app:layout_marginLeftPercent="13%h"
                                    android:textSize="@dimen/sp_13"
                                    android:textColor="@color/white"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="15dp"
                                    android:layout_gravity="center_vertical"
                                    android:text="NCE"
                                    android:textSize="@dimen/sp_12"
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:textColor="@color/white"
                                    />
                            </LinearLayout>
                            <TextView
                                android:id="@+id/total_assets02"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="0.00"
                                android:textSize="@dimen/sp_12"
                                android:maxLines="1"
                                android:maxEms="15"
                                android:ellipsize="end"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_marginTop="@dimen/dp_10"
                                android:layout_marginLeft="@dimen/dp_10" />


                            <TextView
                                android:id="@+id/dollar02_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="$0.00"
                                android:textSize="@dimen/sp_12"
                                android:textColor="@color/white"
                                app:layout_marginLeftPercent="7%h"
                                app:layout_textSizePercent="25%h"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_marginTop="@dimen/dp_10"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/btn_transaction"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/game_zh_vf"
                            android:layout_marginRight="@dimen/dp_10"
                            android:orientation="vertical"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/dp_10"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="15dp"
                                    android:layout_gravity="center_vertical"
                                    android:text="@string/transf56"
                                    android:paddingLeft="@dimen/dp_10"
                                    app:layout_marginLeftPercent="13%h"
                                    android:textSize="@dimen/sp_13"
                                    android:textColor="@color/white"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="15dp"
                                    android:layout_gravity="center_vertical"
                                    android:text="NCE"
                                    android:textSize="@dimen/sp_12"
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:textColor="@color/white"
                                    />
                            </LinearLayout>
                            <TextView
                                android:id="@+id/total_assets03"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="0.00"
                                android:textSize="@dimen/sp_12"
                                android:maxLines="1"
                                android:maxEms="15"
                                android:layout_marginRight="@dimen/dp_10"
                                android:ellipsize="end"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_marginTop="@dimen/dp_10"
                                android:layout_marginLeft="@dimen/dp_10" />


                            <TextView
                                android:id="@+id/dollar03_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="$0.00"
                                android:textSize="@dimen/sp_12"
                                android:textColor="@color/white"
                                app:layout_marginLeftPercent="7%h"
                                app:layout_textSizePercent="25%h"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_marginTop="@dimen/dp_10"
                                />
                        </LinearLayout>


                    </LinearLayout>
                </HorizontalScrollView>




                <com.sunfusheng.marqueeview.MarqueeView
                    android:id="@+id/data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_marginBottomPercent="2%w"
                    app:layout_marginLeftPercent="4.8%w"
                    app:layout_marginTopPercent="2%w"
                    app:mvAnimDuration="1000"
                    app:mvDirection="bottom_to_top"
                    app:mvInterval="5000"
                    app:mvSingleLine="true"
                    app:mvTextColor="@color/blue1"
                    app:mvTextSize="@dimen/dp_13" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    >
                    <LinearLayout
                        android:id="@+id/btn_credit"
                        android:layout_width="0dp"
                        android:layout_marginRight="5dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_weight="1"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:orientation="horizontal"
                            android:gravity="center"
                            >

                            <ImageView
                                android:layout_width="@dimen/dp_13"
                                android:layout_height="@dimen/dp_13"
                                android:layout_gravity="center_vertical"
                                android:background="@mipmap/xinyong_icon_vf"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="@string/home3"
                                android:textColor="@color/white"
                                android:paddingLeft="@dimen/dp_3"
                                app:layout_marginLeftPercent="10%h"
                                app:layout_textSizePercent="25%h" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/dp_5"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        >

                        <LinearLayout
                            android:id="@+id/btn_auction"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:orientation="horizontal"
                            android:gravity="center"
                            >
                            <ImageView
                                android:layout_width="@dimen/dp_13"
                                android:layout_height="@dimen/dp_13"
                                android:layout_gravity="center_vertical"
                                android:src="@mipmap/paimai_icon_vf"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="@string/home5"
                                android:textColor="@color/white"
                                android:paddingLeft="@dimen/dp_4"
                                app:layout_marginLeftPercent="13%h"
                                app:layout_textSizePercent="25%h" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/dp_5"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        >

                        <LinearLayout
                            android:id="@+id/btn_game"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:orientation="horizontal"
                            android:gravity="center"
                            >
                            <ImageView
                                android:layout_width="@dimen/dp_13"
                                android:layout_height="@dimen/dp_13"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/game_vf"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="@string/home4"
                                android:textColor="@color/white"
                                android:paddingLeft="@dimen/dp_4"
                                app:layout_marginLeftPercent="13%h"
                                app:layout_textSizePercent="25%h" />
                        </LinearLayout>
                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    >

                    <LinearLayout
                        android:id="@+id/note"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/dp_5"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/dp_13"
                                android:layout_height="@dimen/dp_13"
                                android:layout_gravity="center_vertical"
                                android:background="@mipmap/jiedian_vf"
                                app:layout_heightPercent="25%h"
                                app:layout_widthPercent="25%h" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="@string/node16"
                                android:textColor="@color/white"
                                android:paddingLeft="@dimen/dp_3"
                                app:layout_marginLeftPercent="13%h"
                                app:layout_textSizePercent="25%h" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_marginRight="@dimen/dp_5"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        >

                        <LinearLayout
                            android:id="@+id/mine"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/sp_17"
                            >

                            <ImageView
                                android:layout_width="@dimen/dp_13"
                                android:layout_height="@dimen/dp_13"
                                android:background="@mipmap/kuangji_vf"
                                android:layout_marginTop="@dimen/dp_3"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/dp_3"
                                android:textColor="@color/white"
                                android:text="@string/mine15"/>
                        </LinearLayout>
                    </LinearLayout>





                    <LinearLayout
                        android:id="@+id/btn_more"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        app:layout_widthPercent="32.2%w">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:orientation="horizontal"
                            android:layout_marginLeft="@dimen/dp_13"
                            >

                            <ImageView
                                android:layout_width="@dimen/dp_13"
                                android:layout_height="@dimen/dp_13"
                                android:layout_gravity="center_vertical"
                                android:background="@mipmap/gengduo_icon_vf"
                                app:layout_heightPercent="25%h"
                                app:layout_widthPercent="25%h" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:paddingLeft="@dimen/dp_3"
                                android:text="@string/home6"
                                android:textColor="@color/white"
                                app:layout_marginLeftPercent="13%h"
                                app:layout_textSizePercent="25%h" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                <View
                    android:id="@+id/a"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_centerHorizontal="true"
                    android:background="@color/white8" />

                <ImageView
                    android:id="@+id/tiao"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_16"
                    android:gravity="center"
                    android:src="@mipmap/simu"
                    android:textSize="@dimen/dp_16"
                    android:visibility="gone" />


                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/title_vp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_88"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_16"></androidx.viewpager.widget.ViewPager>
                <com.zhy.android.percent.support.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    app:layout_heightPercent="12.1%w">

                    <com.zhy.android.percent.support.PercentRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_marginRight="@dimen/dp_16"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dp_39"
                            android:background="@color/white8" />

                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_marginLeftPercent="7.83%w"
                            app:layout_marginTopPercent="2.5%w"
                            >
                            <TextView
                                android:id="@+id/zf"
                                android:layout_width="@dimen/dp_60"
                                android:layout_height="@dimen/dp_20"
                                android:textSize="@dimen/dp_15"
                                android:gravity="center"
                                android:text="@string/home7"
                                android:textColor="@color/blue"

                                />
                            <View
                                android:id="@+id/view01"
                                android:layout_width="@dimen/dp_70"
                                android:layout_height="@dimen/dp_2"
                                android:layout_marginTop="@dimen/dp_9"
                                android:background="@color/blue"
                                />
                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_marginLeftPercent="40.83%w"
                            app:layout_marginTopPercent="2.5%w"
                            >
                            <TextView
                                android:id="@+id/cj"
                                android:layout_width="@dimen/dp_60"
                                android:layout_height="@dimen/dp_20"
                                android:textSize="@dimen/dp_12"
                                android:gravity="center"
                                android:text="@string/home8"
                                android:textColor="@color/white6"

                                />
                            <View
                                android:id="@+id/view02"
                                android:layout_width="@dimen/dp_70"
                                android:layout_height="@dimen/dp_2"
                                android:layout_marginTop="@dimen/dp_9"
                                android:background="@color/blue"
                                android:visibility="gone"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_marginLeftPercent="73.83%w"
                            app:layout_marginTopPercent="2.5%w"
                            >

                            <TextView
                                android:id="@+id/xb"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_20"
                                android:textSize="@dimen/dp_12"
                                android:gravity="center"
                                android:layout_marginLeft="@dimen/dp_15"
                                android:text="@string/home9"
                                android:textColor="@color/white6"

                                />
                            <View
                                android:id="@+id/view03"
                                android:layout_width="@dimen/dp_70"
                                android:layout_height="@dimen/dp_2"
                                android:background="@color/blue"
                                android:visibility="gone"
                                android:layout_marginTop="@dimen/dp_9"
                                />

                        </LinearLayout>


                    </com.zhy.android.percent.support.PercentRelativeLayout>
                </com.zhy.android.percent.support.PercentRelativeLayout>



            </com.zhy.android.percent.support.PercentLinearLayout>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sp_16"
                android:layout_marginRight="@dimen/sp_16"
                ></androidx.viewpager.widget.ViewPager>
        </com.zhy.android.percent.support.PercentLinearLayout>
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>