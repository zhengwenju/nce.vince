<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/login_background_vf">
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@drawable/back_vf"
                android:layout_centerInParent="true"/>
        </com.zhy.android.percent.support.PercentRelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_textSizePercent="5%w"
            android:text="@string/login14"
            android:textSize="@dimen/dp_24"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/s7_vf"
        app:layout_heightPercent="107.3%w"
        app:layout_marginTopPercent="25%w"
        app:layout_widthPercent="84.1%w">

        <TextView
            android:id="@+id/b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_34"
            android:text="@string/login14"
            android:textSize="@dimen/dp_18"
            android:textStyle="bold"
            android:textColor="@color/white"

            />

        <ImageView
            android:id="@+id/iv"
            android:layout_width="@dimen/dp_125"
            android:layout_height="@dimen/dp_125"
            android:layout_alignParentStart="true"
            android:layout_marginStart="106dp"
            android:layout_marginTop="@dimen/dp_164" />

        <TextView
            android:id="@+id/tv_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:text="@string/assets24"
            android:textStyle="bold"
            android:textSize="@dimen/dp_24"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@+id/b"
            />


    </com.zhy.android.percent.support.PercentRelativeLayout>

    <TextView
        android:id="@+id/btn_ok"
        android:layout_width="@dimen/dp_310"
        android:layout_height="@dimen/dp_44"
        android:background="@drawable/blue_shape15"
        android:layout_centerHorizontal="true"
        android:text="@string/share_friends"
        android:textColor="@color/white"
        android:layout_below="@+id/a"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/dp_20"
        />
</com.zhy.android.percent.support.PercentRelativeLayout>