<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >


    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/itemTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

       <TextView
           android:id="@+id/name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="name"
           android:layout_marginLeft="@dimen/dp_22"
           android:textSize="@dimen/sp_12"
           />

        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_158"
            android:layout_marginTop="@dimen/dp_18"
            android:text="1000"
            android:textSize="@dimen/sp_12"/>
        <TextView
            android:id="@id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019/1/1"
            android:layout_marginLeft="@dimen/dp_22"
            android:textSize="@dimen/sp_11"
            android:layout_marginTop="@dimen/dp_27"
            android:textColor="@color/white6"
            />

        <TextView
            android:id="@+id/num_Bz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NCE"
            android:layout_marginTop="@dimen/dp_20"
            android:textColor="#666666"
            android:layout_marginLeft="@dimen/dp_205"
            android:textSize="@dimen/sp_10"


            />

        <TextView
            android:id="@+id/accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:text="@string/transaction6"
            android:textSize="@dimen/dp_12"
            android:textColor="@color/blue"
            />
        <TextView
            android:id="@+id/refuse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:text="@string/transaction7"
            android:textSize="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_25"
            android:textColor="@color/blue"
            />
        <!--<Button
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="@dimen/dp_20"
            android:text="拒绝"
            />-->

        <TextView
            android:id="@+id/successful"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="@dimen/dp_18"
            android:text=""
            android:textColor="#1976D2"
            android:textSize="11sp" />




    </com.zhy.android.percent.support.PercentRelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_9"
        android:layout_marginRight="@dimen/dp_22"
        android:layout_marginLeft="@dimen/dp_22"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/white1"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white1"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/dp_22"
        android:layout_marginRight="@dimen/dp_22"
        >
        <!--<TextView
            android:id="@+id/nameData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            />

        <TextView
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            />-->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>

</LinearLayout>
