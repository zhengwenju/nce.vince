<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_22"
        android:layout_marginRight="@dimen/dp_22"
        android:background="@drawable/blue_shape2"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_13"
            android:text="@string/transf50"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/sp_20" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/sp_15"
            android:layout_marginTop="@dimen/dp_15">

            <TextView
                android:id="@+id/pop_quote_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColorHint="@color/white"
                android:text="@string/transf32"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/mBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginBottom="2dp"
                android:text="14000"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@color/white6"
                android:textStyle="bold"
                android:textSize="@dimen/sp_16" />
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:background="@color/white6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/sp_15"
            android:layout_marginLeft="@dimen/sp_15"
            android:layout_marginTop="@dimen/dp_5">

            <TextView
                android:id="@+id/pop_total_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transf33"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/finPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="0.12412"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@color/white6"
                android:textSize="@dimen/sp_16" />
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_15"
            android:orientation="vertical"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="购买数量"
                android:textSize="@dimen/sp_15"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <com.bronet.blockchain.ui.MyEditText
                    android:id="@+id/number"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_30"
                    android:layout_weight="7"
                    android:background="@null"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white6"
                    android:hint="@string/transf51"
                    android:inputType="numberDecimal"
                    android:textSize="@dimen/sp_16" />


                <TextView

                    android:id="@+id/all_tv"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_30"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:text="@string/transf34"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/sp_16"
                    app:layout_widthPercent="20%w" />
                <TextView
                    android:id="@+id/unit_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_30"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="NCE_"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:textSize="@dimen/sp_16"
                    />


            </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@color/white6" />



        </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="@string/transf52"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/input_price_etv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:text="0.0"
                    android:textColor="@color/white6"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/unit_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:text="0.0"
                    android:textColor="@color/white6"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="@string/transf38"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12" />

                <com.bronet.blockchain.ui.MyTextView
                    android:id="@+id/sxf_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:text="0.0"
                    android:textColor="@color/white6"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/unit_tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:text="ETH"
                    android:textColor="@color/white6"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>


        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginLeft="@dimen/sp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/white6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15"
                android:text="@string/d37"

                />
            <EditText



                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:background="@null"
                android:hint="@string/d20"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textColorHint="@color/white6"
                android:textSize="@dimen/sp_16"
                android:focusable="true"
                android:inputType="textPassword"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@color/white6" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            >

            <TextView
                android:id="@+id/btn_no"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_22"
                android:text="@string/d13"
                android:textStyle="bold"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/blue"
                android:background="@drawable/btn_blue_tr_bg"
                />
            <TextView
                android:id="@+id/btn_yes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_heightPercent="15%w"
                app:layout_widthPercent="50%w"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="@string/basic_data15"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_22"
                android:textColor="@color/white"
                android:background="@drawable/btn_blue_bg"
                android:gravity="center"
                android:layout_weight="1"
                />
        </LinearLayout>
    </LinearLayout>
</com.zhy.android.percent.support.PercentRelativeLayout>