<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/parent_linerlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/black9"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_15"
            >
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="微型矿机"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                />
            <Button
                android:id="@+id/Purchase"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_30"
                android:text="买入"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/white"
                android:background="@drawable/blue_shape15"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_10"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/black10"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mine03"
                        android:textSize="@dimen/sp_11"
                        android:layout_marginTop="@dimen/dp_9"
                        android:textColor="@color/white6"
                        android:layout_marginLeft="@dimen/dp_15"
                        />
                    <TextView
                        android:id="@+id/name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_15"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:text="C1"


                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/dp_30"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_15"
                        android:src="@mipmap/shu"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_5"
                        />


                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mine04"
                        android:textSize="@dimen/sp_11"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_9"
                        android:textColor="@color/white6"
                        />
                    <TextView
                        android:id="@+id/ratio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_15"
                        android:text="0.20%"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/dp_30"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_15"
                        android:src="@mipmap/shu"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_5"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mine05"
                        android:textSize="@dimen/sp_11"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_9"
                        android:textColor="@color/white6"
                        />
                    <TextView
                        android:id="@+id/multiple"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_15"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:text="C1"
                        android:layout_marginTop="@dimen/dp_30"
                        android:textColor="@color/GREEN"
                        />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mine06"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_9"
                        android:textSize="@dimen/sp_11"
                        android:textColor="@color/white6"
                        />
                    <TextView
                        android:id="@+id/qty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_15"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:text="C1"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/dp_30"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_15"
                        android:src="@mipmap/shu"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_5"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mine07"
                        android:textSize="@dimen/sp_11"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:textColor="@color/white6"
                        android:layout_marginTop="@dimen/dp_9"
                        />
                    <TextView
                        android:id="@+id/totalQty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_15"
                        android:text="C1"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_30"
                        android:textColor="@color/GREEN"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_15"
                        android:src="@mipmap/shu"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_5"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mine08"
                        android:textSize="@dimen/sp_11"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_9"
                        android:textColor="@color/white6"
                        />
                    <TextView
                        android:id="@+id/fuelRatio"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_15"
                        android:text="C1"
                        android:layout_marginTop="@dimen/dp_30"
                        android:textColor="@color/red"
                        />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>