<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:paddingTop="@dimen/dp_20"
        android:background="@drawable/them_shape_vf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:text="剩余资产0.00"
            android:layout_centerHorizontal="true"
            android:id="@+id/input_num_tv"
            android:layout_marginLeft="@dimen/dp_6"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/white15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_20"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/input_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_17"
                android:textColor="@color/white15"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="选择级别"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_width="120dp"
                android:layout_height="@dimen/dp_200">
            </androidx.recyclerview.widget.RecyclerView>
            <RelativeLayout
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/recyclerView"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_200"
                >
                <TextView
                    android:id="@+id/tv2"
                    android:textColor="@color/white15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp_17"
                    android:text="输入投资数量"/>
                <com.bronet.blockchain.ui.MyEditText
                    android:layout_below="@+id/tv2"
                    android:layout_marginTop="@dimen/dp_20"
                    android:id="@+id/input_num_et"
                    android:hint="0.00"
                    android:layout_width="@dimen/dp_150"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_5"
                    android:background="#dce3f5"
                    android:focusable="true"
                    android:textSize="@dimen/sp_14"
                    android:paddingLeft="@dimen/dp_8"
                    android:inputType="numberDecimal"
                    android:gravity="center_vertical|end"
                    />
                <TextView
                    android:layout_marginTop="@dimen/dp_10"
                    android:id="@+id/tip_tv"
                    android:text="lkjaslkdfj"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/white15"
                    android:layout_below="@+id/input_num_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:paddingBottom="@dimen/dp_20"
                android:layout_below="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/btn_no"
                    android:layout_width="@dimen/dp_130"
                    android:layout_height="@dimen/dp_37"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_14"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    android:text="@string/basic_data14"
                    android:background="@drawable/white_shape7"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:background="@drawable/blue_shape4"
                    android:id="@+id/btn_ok"
                    android:layout_width="@dimen/dp_130"
                    android:layout_height="@dimen/dp_37"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_marginRight="@dimen/dp_10"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    android:text="@string/basic_data15"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16" />
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>