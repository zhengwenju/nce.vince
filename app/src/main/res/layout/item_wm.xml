<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sp_48"
        android:background="@drawable/item_back_vf"
        android:layout_marginTop="@dimen/sp_15"
        android:layout_marginRight="@dimen/sp_16"
        android:layout_marginLeft="@dimen/sp_16"


        >
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USDT"
            android:textColor="@color/green"
            android:textSize="@dimen/sp_16"
            android:layout_marginLeft="@dimen/dp_5"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_marginLeftPercent="4%w" />

        <TextView
            android:id="@+id/number"
            android:layout_toRightOf="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="11111"
            android:textColor="@color/green"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_marginLeftPercent="4%w" />

        <TextView

            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            android:text="2000/01/01"
            android:layout_centerInParent="true"

            />
        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_marginRightPercent="4%w"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_27"
            />
    </RelativeLayout>



</LinearLayout>