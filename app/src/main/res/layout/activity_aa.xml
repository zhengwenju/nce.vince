<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/login_background_vf"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >


    <RelativeLayout
        android:id="@+id/btn_back"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_16"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp_15">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_back_vf"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACKUP"
        android:textColor="@color/white8"
        android:textSize="@dimen/dp_73"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_90"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_135"
        android:textSize="@dimen/dp_32"
        android:text="备份助记词"
        android:layout_marginLeft="@dimen/dp_32"
        android:textStyle="bold"
        android:textColor="@color/white"/>


    <ScrollView
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_195"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:layout_marginTopPercent="7%w"
                android:textColor="@color/white"
                app:layout_textSizePercent="4%w"
                android:text="@string/aa1" />
            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_marginTopPercent="5%w"
                app:layout_marginLeftPercent="7%w"
                app:layout_marginRightPercent="7%w"
                app:layout_textSizePercent="3.5%w"
                android:text="@string/aa2"
                android:textColor="@color/white"/>
            <ScrollView
                android:id="@+id/sc1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_heightPercent="35%w"
                app:layout_marginTopPercent="5%w"
                app:layout_marginLeftPercent="7%w"
                app:layout_marginRightPercent="7%w"
                android:background="@drawable/white_shape8"
                android:visibility="gone">
                <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/tagFlowLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_5"/>
            </ScrollView>
            <ScrollView
                android:id="@+id/sc2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_heightPercent="35%w"
                app:layout_marginTopPercent="5%w"
                app:layout_marginLeftPercent="7%w"
                app:layout_marginRightPercent="7%w"
                android:background="@drawable/white_shape8"
                android:visibility="gone">
                <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/tagFlowLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_5"
                    />
            </ScrollView>
            <TextView
                android:id="@+id/data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_heightPercent="28%w"
                app:layout_marginTopPercent="5%w"
                app:layout_marginLeftPercent="7%w"
                app:layout_marginRightPercent="7%w"
                android:background="@drawable/white_shape8"
                android:padding="@dimen/dp_5"
                android:textSize="@dimen/sp_16"
                android:text="11111"
                android:textColor="@color/white1"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/btn_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_heightPercent="10.6%w"
                app:layout_marginTopPercent="15.7%w"
                app:layout_marginLeftPercent="7%w"
                app:layout_marginRightPercent="7%w"
                android:background="@drawable/blue_shape15"
                android:text="@string/aa3"
                android:textSize="@dimen/dp_20"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"/>
        </com.zhy.android.percent.support.PercentLinearLayout>
    </ScrollView>
</RelativeLayout>