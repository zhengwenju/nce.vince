<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:background="@drawable/them_shape_vf"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_340"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/white_shape4"
       >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_150"
                android:src="@mipmap/tips"
                />
            <TextView
                android:id="@+id/tip_tv"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_40"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/d35"
                android:textStyle="bold"
                android:textColor="@color/white15"
                android:textSize="@dimen/sp_17" />
            <TextView
                android:layout_below="@+id/tip_tv"
                android:layout_centerHorizontal="true"
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="4"
                android:padding="2dip"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:paddingLeft="@dimen/dp_2"
                android:paddingRight="@dimen/dp_2"
                android:scrollbars="vertical"
                android:gravity="left"
                android:singleLine="false"
                android:textColor="@color/white"
                android:text="@string/d36"
                android:textSize="@dimen/sp_16" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/sp_10"
                android:id="@+id/btn_back"
                android:layout_width="@dimen/dp_140"
                android:layout_height="@dimen/dp_40"
                android:layout_below="@+id/content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/login20"
                android:textColor="@color/white"
                android:background="@drawable/blue_shape5"
                android:textSize="@dimen/sp_18"
                android:layout_weight="1"/>
            <Button
                android:layout_marginRight="@dimen/dp_20"
             android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/sp_10"
                android:id="@+id/btn_yes"
                android:layout_width="@dimen/dp_140"
                android:layout_height="@dimen/dp_40"
                android:layout_below="@+id/content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/basic_data15"
                android:textColor="@color/white"
                android:background="@drawable/blue_shape5"
                android:textSize="@dimen/sp_18"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>