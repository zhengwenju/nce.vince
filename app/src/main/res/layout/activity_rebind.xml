<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/login_background_vf">
    <RelativeLayout
        android:id="@+id/btn_back"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_15">
        <ImageView
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:background="@drawable/btn_back_vf"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/c"
        android:layout_below="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RIND"
        android:textColor="@color/white8"
        android:textSize="@dimen/dp_72"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_back"
        android:textSize="@dimen/dp_32"
        android:text="设备绑定"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_32"
        android:textStyle="bold"
        android:textColor="@color/white"/>


    <EditText
        android:enabled="false"
        android:id="@+id/et_auxiliaries"
        android:layout_below="@+id/c"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_84"
        android:layout_marginLeft="@dimen/dp_33"
        android:layout_marginRight="@dimen/dp_33"
        android:textSize="@dimen/sp_15"
        android:background="@drawable/white_shape8"
        android:hint="@string/login2"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:paddingLeft="@dimen/dp_7"
        android:paddingRight="@dimen/dp_7"
        android:text=""/>

    <TextView
        android:layout_marginTop="@dimen/dp_10"
        android:layout_alignLeft="@+id/et_auxiliaries"
        android:layout_below="@+id/et_auxiliaries"
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/sp_12"
        android:text="@string/login33"
        android:textColor="@color/black4"/>
    <LinearLayout
        android:id="@+id/a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/et_auxiliaries"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_33"
        android:layout_marginTop="@dimen/dp_30"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付密码"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"

            />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="#00000000"
            android:hint="验证支付密码"
            android:lineHeight="1dp"
            android:textColorHint="@color/white6"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/white"
            android:inputType="textPassword"
            />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

            <ImageView
                android:id="@+id/hidden_pwd_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@drawable/hidden_password_vf"
                />
            <ImageView
                android:id="@+id/display_pwd_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@drawable/display_pwd_vf"
                android:visibility="gone"
                />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/a"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_33"
        android:background="#FF8A8A8A" />
    <LinearLayout
        android:id="@+id/b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_33"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@+id/a"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="余额数量"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"

            />

        <com.bronet.blockchain.ui.MyEditText
            android:id="@+id/et_quote"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="#00000000"
            android:hint="@string/login32"
            android:lineHeight="1dp"
            android:textColorHint="@color/white6"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:inputType="textPassword"


            />
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/b"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_33"
        android:background="#FF8A8A8A" />


    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_below="@+id/b"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_32"
        android:background="@drawable/btn_login_selector"
        android:textSize="@dimen/sp_20"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="@string/login28"/>
    <ProgressBar
        android:id="@+id/loding"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_centerInParent="true"
        style="@android:style/Widget.ProgressBar.Large.Inverse"
        android:visibility="gone"/>
</RelativeLayout>