<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_15"
    android:paddingTop="@dimen/dp_5"
    android:orientation="vertical">
    <LinearLayout
        android:background="@drawable/node_item_vf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="@dimen/dp_40"
            >
            <TextView
                android:id="@+id/reset_pwd_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_22"
                android:layout_marginLeft="@dimen/dp_22"
                android:text="重置密码"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />
            <TextView
                android:id="@+id/replay_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_22"
                android:layout_marginLeft="@dimen/dp_22"
                android:text="2019/01/01 10:00"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/white4"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            >
            <ImageView
                android:id="@+id/unread_iv"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:background="@mipmap/unread_red_bg"
                />
            <TextView
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_22"
                android:id="@+id/nid_tv"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3242234"
                android:textSize="@dimen/sp_16"
                />
            <TextView
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_12"
                android:id="@+id/nick_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:layout_toRightOf="@+id/nid_tv"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/white"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_22"
                >
                <TextView
                    android:id="@+id/status_msg_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="操作"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/sp_16" />
            </RelativeLayout>
            <RelativeLayout
                android:paddingBottom="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginLeft="@dimen/dp_22">
                <TextView
                    android:layout_marginTop="@dimen/dp_5"
                    android:id="@+id/number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="通过时间:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14" />
                <TextView
                    android:layout_marginTop="@dimen/dp_5"
                    android:id="@+id/audit_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/number"
                    android:text="2019/09/09"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginLeft="@dimen/dp_10"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>