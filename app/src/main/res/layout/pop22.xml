<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@mipmap/back_image"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tv_content"
            android:text="@string/close"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            />
        <ImageView
            android:id="@+id/nce_image_iv"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_90"
            android:layout_alignParentTop="true"

            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@mipmap/img_nce_1" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="@dimen/dp_190"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/dp_15"
            android:text="1NCE"
            android:layout_marginTop="@dimen/dp_8"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_below="@+id/nce_image_iv"
            />
        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_22"
            android:layout_below="@+id/tv_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mutual58"
                android:textColor="@color/white"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/yellow1"
                android:layout_marginRight="@dimen/dp_22"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="horizontal"
                >

                <EditText
                    android:id="@+id/qty_etv"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_30"
                    android:background="@null"
                    android:layout_weight="8"
                    android:paddingLeft="@dimen/dp_10"
                    android:hint="请输入NCE数量"
                    android:textColor="@color/white"
                    android:inputType="number"
                    android:layout_marginTop="5dp"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/sp_16" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="NCE"
                    android:gravity="center"
                    android:textColor="@color/white"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/btn_yes"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/bets"

                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:textColor="@color/yellow1"
                android:background="@mipmap/img_btn"
                />
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mutual57"
                android:textColor="@color/white"
                android:gravity="center"
                />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>