<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_10">
    <TextView
        android:layout_marginTop="@dimen/dp_15"
        android:id="@+id/feedback_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_14"/>
    <RelativeLayout
        android:id="@+id/feedback_layout"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/feedback_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/blue_shape2"
            android:padding="@dimen/dp_15"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/dp_50"
            android:textSize="@dimen/dp_15"/>
        <ImageView
            android:id="@+id/feedback_ava_iv"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_5"
            />
    </RelativeLayout>
    <ImageView
        android:id="@+id/feedback_image_iv"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_50"
        android:layout_gravity="center_horizontal|right" />
    <TextView
        android:layout_marginTop="@dimen/dp_15"
        android:id="@+id/answer_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_14"
        android:visibility="gone"/>
    <RelativeLayout
        android:id="@+id/answer_layout"
        app:layout_marginTopPercent="5%w"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">
        <ImageView
            android:id="@+id/answer_ava_iv"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_5"
            />
        <LinearLayout
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/answer_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@drawable/white_shape4"
                android:textSize="@dimen/dp_15"
                android:padding="@dimen/dp_15"/>
            <ImageView
                android:id="@+id/answer_image_iv"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_gravity="center_horizontal|left" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>